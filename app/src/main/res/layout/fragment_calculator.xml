<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:gravity="end|center_vertical"
        android:hint="@string/hint"
        android:textSize="44sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="0dp"
        android:elevation="5dp"
        android:gravity="end|center_vertical"
        android:maxLength="13"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:id="@+id/layout_2"

            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_Converter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/converter"
                android:elevation="5dp"
                android:minHeight="48dp"
                android:text="@string/converter"
                android:textColor="#4527A0"
                android:textSize="13sp"
                android:onClick="ss"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="250dp"
                android:contentDescription="@string/deleteicon"
                android:onClick="delete"
                app:srcCompat="@drawable/deletesml" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="83dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_2" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_btn"
                    android:backgroundTint="#FF9800"
                    android:elevation="5dp"
                    android:text="@string/MR"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_btn"
                    android:backgroundTint="#FF9800"
                    android:elevation="5dp"
                    android:text="@string/MC"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_btn"
                    android:backgroundTint="#FF9800"
                    android:elevation="5dp"
                    android:text="@string/m"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_btn"
                    android:backgroundTint="#FF9800"
                    android:elevation="5dp"
                    android:text="@string/Mminus"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_CE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="clear"
                    android:text="@string/ce"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:text="@string/sign"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btn_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"

                    android:backgroundTint="#FAF3E3"

                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/percent"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/divide"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n7"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n8"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n9"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/times"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n4"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n5"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n6"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/plus"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n2"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n3"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/minus"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="#FAF3E3"
                    android:elevation="5dp"
                    android:onClick="dotFunction"
                    android:text="@string/dot"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_darkblue"
                    android:backgroundTint="#003865"

                    android:elevation="5dp"
                    android:onClick="clickedNum"
                    android:text="@string/n0"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="DuplicateSpeakableTextCheck" />


                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_btn"
                    android:backgroundTint="#FF9800"
                    android:elevation="5dp"
                    android:onClick="evaluateFunction"
                    android:text="@string/equal"
                    android:textSize="24sp"
                    tools:ignore="TextContrastCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
